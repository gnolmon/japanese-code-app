<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7870CC"
    android:orientation="vertical"
    tools:context="com.example.japaneseapp.CardNewWordActivity$PlaceholderFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/btnShufflecard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shufflebutton" />

        

        <Button
            android:id="@+id/btnPlaycard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/playbutton" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/spaceflashcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <android.support.v4.view.ViewPager
            android:id="@+id/flashcardWord"
            android:layout_width="wrap_content"
            android:layout_height="350dp" >
        </android.support.v4.view.ViewPager>
    </LinearLayout>

</LinearLayout>