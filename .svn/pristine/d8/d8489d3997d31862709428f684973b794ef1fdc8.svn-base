<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.japaneseapp.CardNewWordActivity$PlaceholderFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#68BF60"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flash Card"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="#333333" >

        <Button
            android:id="@+id/btnShufflecard"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/shufflebutton" />

        <Button
            android:id="@+id/btnPlaycard"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="120dp"
            android:background="@drawable/playbutton" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/spaceflashcard"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center" >

        <android.support.v4.view.ViewPager
            android:id="@+id/flashcardWord"
            android:layout_width="wrap_content"
            android:layout_height="350dp" >
        </android.support.v4.view.ViewPager>
    </LinearLayout>

</LinearLayout>